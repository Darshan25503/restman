# Database Configuration
DATABASE_URL=postgresql://root@localhost:26257/restman_db?sslmode=disable

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Kafka Configuration
KAFKA_BROKERS=localhost:9092

# ClickHouse Configuration
CLICKHOUSE_URL=http://localhost:8124

# Service Ports
AUTH_SERVICE_PORT=8001
RESTAURANT_SERVICE_PORT=8002
ORDER_SERVICE_PORT=8003
KITCHEN_SERVICE_PORT=8004
BILLING_SERVICE_PORT=8005
ANALYTICS_SERVICE_PORT=8006
SCHEDULER_SERVICE_PORT=8007
GATEWAY_PORT=8000

# JWT Configuration (for future use)
JWT_SECRET=your-secret-key-change-this-in-production

# Email Configuration (for OTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@restman.com

# OTP Configuration
OTP_EXPIRY_SECONDS=300
OTP_LENGTH=6

# Session Configuration
SESSION_EXPIRY_SECONDS=7200

# Logging
RUST_LOG=info,restman=debug

# Environment
ENVIRONMENT=development

